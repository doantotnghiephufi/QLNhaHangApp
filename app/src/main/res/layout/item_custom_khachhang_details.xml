<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng: "
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/text_no_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tv_tenKH_Details"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_name_KH"
                android:text="Tên khách hàng demo"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tích lũy: "
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/text_no_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,000,000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:id="@+id/tv_TichLuy_Details"
                android:textColor="@color/text_title"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/tv_bottom_details_list"
            android:layout_marginTop="5dp"
            android:background="@color/text_title_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/text_title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/text_name_KH"
            android:text="Danh sách hóa đơn"
            android:textSize="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycleview_hoadon"/>
    </LinearLayout>

</LinearLayout>