<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingTop="20dp"
                android:drawablePadding="-25dp"
                android:drawableTop="@drawable/icon_monan"
                android:background="@drawable/gradiant_button_home"
                android:text="Món ăn bán chạy"
                android:id="@+id/btn_MonAnBanChay"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/text_name_KH"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingTop="20dp"
                android:drawablePadding="-25dp"
                android:layout_marginLeft="30dp"
                android:drawableTop="@drawable/icon_thucuong"
                android:id="@+id/btn_ThucUongBanChay"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/text_name_KH"
                android:background="@drawable/gradiant_button_home"
                android:text="Thức uống bán chạy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:paddingTop="20dp"
                android:drawablePadding="-25dp"
                android:textSize="18dp"
                android:drawableTop="@drawable/icon_doanhthu"
                android:id="@+id/btn_DoanhThu"
                android:textColor="@color/text_name_KH"
                android:background="@drawable/gradiant_button_home"
                android:text="Doanh Thu"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:drawableTop="@drawable/icon_doanhthu"
                android:background="@drawable/gradiant_button_home"
                android:text="Doanh Thu Khu Vực"
                android:paddingTop="20dp"
                android:drawablePadding="-25dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:id="@+id/btn_DoanhThuKhuVuc"
                android:textColor="@color/text_name_KH"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/icon_stock"
                android:background="@drawable/gradiant_button_home"
                android:text="Nguyên Liệu"
                android:textSize="18dp"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:drawablePadding="-25dp"
                android:textAllCaps="false"
                android:id="@+id/btn_NguyenLieu"
                android:textColor="@color/text_name_KH"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:drawableTop="@drawable/icon_customer"
                android:textColor="@color/text_name_KH"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:id="@+id/btn_KhachHang"
                android:paddingTop="20dp"
                android:drawablePadding="-25dp"
                android:background="@drawable/gradiant_button_home"
                android:text="Khách Hàng"/>
        </LinearLayout>
    </LinearLayout>
    <!--<FrameLayout-->
        <!--android:id="@+id/flContentHome"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->
</android.support.design.widget.CoordinatorLayout>